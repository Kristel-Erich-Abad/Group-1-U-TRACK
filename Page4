	// Main method to run the app
	public static void main(String[] args) {
		EventQueue.invokeLater(() -> {
			try {
				Page4 frame = new Page4();
				frame.setVisible(true);
			} catch (Exception e) {
				e.printStackTrace();
			}
		});
